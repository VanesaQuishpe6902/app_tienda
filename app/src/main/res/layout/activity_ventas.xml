<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgEditarCliente"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/comestibles" />

                <TextView
                    android:id="@+id/textEditar"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Ventas"
                    android:textSize="34sp" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/bg_card_login"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="25dp"
                android:paddingRight="30dp"
                android:translationZ="100dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="REGISTRO DE VENTAS"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnNuevaVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bt_login"
                        android:onClick="abrirPantallaNuevaVenta"
                        android:text="Nueva venta"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#5A2727"
                        app:backgroundTint="#6CBF3D" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventas realizadas"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Cliente | Fecha de venta" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <ListView
                    android:id="@+id/lstVentasRealizadas"
                    android:layout_width="match_parent"
                    android:layout_height="197dp"
                    android:layout_marginBottom="5dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnVolverMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="volverMenuPrincipal"
                        android:text="VOLVER"
                        app:backgroundTint="#009688" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>