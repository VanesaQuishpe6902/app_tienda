<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:visibility="visible"
    tools:context=".FacturacionActivity"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEditarCliente"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/recibo" />

            <TextView
                android:id="@+id/textEditar"
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal|center_vertical"
                android:text="FACTURACIÓN"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@drawable/bg_card_login"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="25dp"
            android:paddingRight="30dp"
            android:translationZ="100dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView112"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="# Venta"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtIdVenta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView1131"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtFechaVenta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView11123"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cedula"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtCedulaFacturacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView161"
                                    android:layout_width="82dp"
                                    android:layout_height="wrap_content"
                                    android:text="Nombres:"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtNombresFacturacion"
                                    android:layout_width="236dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="82dp"
                                    android:layout_height="wrap_content"
                                    android:text="Telefono:"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/txtBuscarProductoFacturacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </TableRow>


                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnAgregarProductoFacturacion"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bt_login"
                            android:onClick="abrirPantallaAgregarProductos"
                            android:text="AGREGAR productos"
                            android:textColor="#FFFFFF"
                            app:backgroundTint="#6CBF3D" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cant | Descripción | Precio U | Precio T" />

                        <ListView
                            android:id="@+id/lstDescripcionVenta"
                            android:layout_width="match_parent"
                            android:layout_height="195dp"
                            android:layout_marginBottom="10dp"></ListView>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="SUBTOTAL "
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtSubtotalFacturacion"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="00.00" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="IVA 12% "
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtIvaFacturacion"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="00.00" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="TOTAL "
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTotalFacturacion"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="00.00" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="* Si desea remover un producto mantenga seleccionado el item a eliminar." />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnFinalizarVenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="finalizarVenta"
                            android:text="Finalizar Venta"
                            android:textColor="@color/white"
                            app:backgroundTint="#2196F3" />

                        <Button
                            android:id="@+id/btnAnularVenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="anularVenta"
                            android:text="Anular Venta"
                            android:textColor="@color/white"
                            app:backgroundTint="#F44336" />

                        <Button
                            android:id="@+id/btnVolverVenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="volverVentanaTipoFacturacion"
                            android:text="VOLVER"
                            android:textColor="@color/white"
                            app:backgroundTint="#009688" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>