<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarClienteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#009688"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEditarCliente"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/configuraciones" />

            <TextView
                android:id="@+id/textEditar"
                android:layout_width="202dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal|center_vertical"
                android:text="Editar/Eliminar Cliente"
                android:textSize="24sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/bg_card_login"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="25dp"
        android:paddingRight="30dp"
        android:translationZ="100dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:text="MODIFICAR REGISTRO"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/txtIdClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtCedulaClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese la cedula"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtApellidoClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese los apellidos"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtNombreClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese los nombres"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtTelefonoClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese el telÃ©fono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/txtDireccionClienteEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese la direccion"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="actualizarCliente"
                android:text="ACTUALIZAR"
                android:textColor="#FFFFFF"
                android:textColorHint="#5A2727"
                app:backgroundTint="#6CBF3D" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="eliminarCliente"
                android:text="ELIMINAR"
                app:backgroundTint="#F73D2F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="volver"
                android:text="VOLVER"
                app:backgroundTint="#009688" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>